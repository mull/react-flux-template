{
  "name": "insert-app-name",
  "version": "0.0.1",
  "description": "Insert app description",
  "main": "src/js/app.js",
  "dependencies": {
    "flux": "^2.0.0",
    "react": "^0.12.0",
    "underscore": "^1.7.0"
  },
  "devDependencies": {
    "browserify": "^6.3.3",
    "reactify": "^0.15",
    "reload": "~0.1.0",
    "watchify": "~2.1.0",
    "uglify-js": "~2.4.15"
  },
  "scripts": {
    "watch": "watchify -o public/bundle.js -v -d src/js/**.js",
    "build": "browserify src/js/**.js > public/bundle.js",
    "build:production": "npm run build && npm run uglify",

    "uglify": "uglifyjs --screw-ie8 public/bundle.js -m -d > public/bundle.min.js"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
